<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/tv_widget_ingredients_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ingredients_label"
        android:layout_margin="8dp"
        android:text="@string/ingredients_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/primaryTextColor" />

    <ListView
        android:id="@+id/lv_widget_ingredients"
        style="@android:style/Widget.DeviceDefault.Light.ListView"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_widget_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/widget_empty_text_view"
        android:text="@string/ingredients_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:visibility="invisible" />

</LinearLayout>